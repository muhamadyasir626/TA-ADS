<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Wishlist</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <h1><%= user.name %>'s Wishlist</h1>
  <% if (items.length) { %>
    <ul>
      <% items.forEach(function(item) { %>
        <li>
          <img src="<%= item.thumbnail %>" alt="<%= item.shoeName %>" style="width: 100px; height: auto;">
          <h2><%= item.shoeName %></h2>
          <p><%= item.description %></p>
          <p>Colorway: <%= item.colorway%></p>
          <p>Reatil Price: $<%= item.retailPrice %></p>
          <!-- Optionally include a remove button -->
          <button onclick="removeFromWishlist('<%= item._id %>')">Remove</button>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>Your wishlist is empty.</p>
  <% } %>
  <script src="/javascripts/wishlist.js"></script>
</body>
</html>
